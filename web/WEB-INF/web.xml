<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <servlet>
        <servlet-name>PasswordGeneratorServlet</servlet-name>
        <servlet-class>biz.waller.ad.PasswordGeneratorServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PasswordGeneratorServlet</servlet-name>
        <url-pattern>/passGenerator.do</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>PhoneWelcomeServlet</servlet-name>
        <servlet-class>biz.waller.ad.PhoneWelcomeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PhoneWelcomeServlet</servlet-name>
        <url-pattern>/callxml.do</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UserInputServlet</servlet-name>
        <servlet-class>biz.waller.ad.UserInputServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserInputServlet</servlet-name>
        <url-pattern>/inputDetails.do</url-pattern>
    </servlet-mapping>


    <security-constraint>
        <display-name>your web app display name</display-name>
        <web-resource-collection>
            <web-resource-name>Protected Area</web-resource-name>
            <url-pattern>*.jsp</url-pattern>
            <url-pattern>*.html</url-pattern>
            <url-pattern>*.xml</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>Family</role-name>
        </auth-constraint>
    </security-constraint>
    <login-config>
        <auth-method>FORM</auth-method>
        <form-login-config>
            <form-login-page>/login.jsp</form-login-page>
            <form-error-page>/error.jsp</form-error-page>
        </form-login-config>
    </login-config>
    <security-role>
        <description>Just a test one</description>
        <role-name>Family</role-name>
    </security-role>


</web-app>